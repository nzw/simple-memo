{
  "name": "SimpleMemo",
  "version": "0.1.1",
  "manifest_version": 3,
  "description": "シンプルなメモ帳",
  "icons": {
    "16": "img/icon/16.png",
    "48": "img/icon/48.png",
    "128": "img/icon/128.png"
  },
  "action":{
	"default_icon":{
		"16": "img/icon/16.png",
		"32": "img/icon/32.png"
	},
	"default_title": "メモ帳",
  	"default_popup": "popup.html"
  },
  "permissions": [
    "storage"
  ]
}
